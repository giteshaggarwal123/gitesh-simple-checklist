rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /attachments/{fileName} {
      // Allow anyone to read attachments
      allow read: if true;

      // Allow anyone to write attachments (up to 10MB)
      // Note: In production, you should add authentication
      allow write: if request.resource.size < 10 * 1024 * 1024;
    }
  }
}
